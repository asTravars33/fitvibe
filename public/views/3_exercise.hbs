<!DOCTYPE html>
<html>
<head>
	<title>Exercise</title>
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="css/styles.css">
	<link rel="stylesheet" type="text/css" href="css/3_exercise.css">
</head><br>
<body>
    <div id="inner">
        <div id="title">
            <center><h1>Exercise</h1></center>
        </div>
        <div id="choose-background" onclick="toggleBackgrounds()">
            <center><p>Choose background</p></center>
        </div>
        <div id="coin-count">
            <img id="coin" src="./img/2_coins.png">
            <span class="big-number">{{profile.coins}}</span>
        </div>
        <div id="schedule" onClick="toggleSchedule()">
            <center><p>Today: {{today}}</p></center>
        </div>
        <div id="block-schedule">
            {{#entry schedule}}
            {{/entry}}
        </div>
        <div id="background-pics">
            <form id="background-form">
            {{#each available-backgrounds}}
                <input type="radio" name="background-input" value="{{itemName}}" id="{{itemId}}"/><label for="{{itemId}}" style="background-image: url('https://temp-2023jwang.sites.tjhsst.edu/img/2_background_{{itemName}}.png')"></label> 
            {{/each}}
            <button>Update</button>
            </form>
        </div>
        <div id="avatar-rest">
            {{> avatar skin=skin-color shirt=shirt-color pants=pants-color shoes=shoes-color hair=hair-color hair-visibility=hair-vis}}
        </div>
        <div id="shelves">
            {{#each exercise-videos}}
                <div class="shelf" id="{{videoId}}" onclick="goto('{{videoName}}', '{{videoId}}', '{{@index}}', '{{url}}')">
                    <center>
                    <img src="./img/3_exercise_{{videoName}}{{background}}.png">
                    <p>{{videoName}}</p>
                    </center>
                </div>
            {{/each}}
            <div class="shelf"></div><div class="shelf"></div>
                <div class="shelf"></div><div class="shelf"></div>
                <div class="shelf"></div><div class="shelf"></div>
                <div class="shelf"></div><div class="shelf"></div>
                <div class="shelf"></div><div class="shelf"></div>
                <div class="shelf"></div><div class="shelf"></div>
                <div class="shelf"></div><div class="shelf"></div>
                <div class="shelf"></div><div class="shelf"></div>
        </div>
    </div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script type="text/javascript" src="js/3_exercise.js"></script>
</body>
</html>